#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#define ll long long 
using namespace std;

int main() {
    int n ; cin >> n ; 
    int k = n/7 ; 
    for(int i=k ; i>=0 ; i-- ){
        if((n-7*i)%4==0 ) {
            int j = (n-7*i) / 4 ; 
            for(int idx = 1 ; idx<=j ; idx++  ) cout << 4 ; 
            for(int idx = 1 ; idx<=i ; idx++  ) cout << 7 ; 
            return 0 ; 
        }
    }
    cout << - 1; 
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    return 0;
}
